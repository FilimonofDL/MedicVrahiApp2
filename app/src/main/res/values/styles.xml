<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bottom_knopki</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="opisaniTexta" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/shrift_3</item>
        <item name="android:paddingStart">@dimen/otstup_oglavleniy</item>
        <item name="android:paddingEnd">@dimen/otstup_oglavleniy</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="opisaniTextaSLevogoKraya" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/shrift_2</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="KrupnoeSLevogoKraya" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/shrift_3</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="knopki_orang" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/shrift_1</item>
        <item name="android:background">@drawable/backgrbelizakrugl_primar_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/vosemdp</item>
        <item name="android:paddingEnd">@dimen/vosemdp</item>
    </style>

    <style name="knoki_belie_orang_text" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/shrift_1</item>
        <item name="android:background">@drawable/backgrbelizakrugl_white_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="text_oglavlenie_na_primary_fone" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/shrift_2</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/otstup_ot_razdelitela_panelek</item>
        <item name="android:paddingBottom">@dimen/otstup_ot_razdelitela_panelek</item>
        <item name="android:paddingStart">@dimen/otstup_ot_razdelitela_panelek</item>
        <item name="android:paddingEnd">@dimen/otstup_ot_razdelitela_panelek</item>
    </style>

    <style name="text_oglavlenie_orange_na_belom_fone" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/shrift_2</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/otstup_ot_razdelitela_panelek</item>
        <item name="android:paddingBottom">@dimen/otstup_ot_razdelitela_panelek</item>
        <item name="android:paddingStart">@dimen/otstup_ot_razdelitela_panelek</item>
        <item name="android:paddingEnd">@dimen/otstup_ot_razdelitela_panelek</item>
    </style>

    <style name="tv_stroka_na_vsu_shirinu_vtorostep" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/shrift_2</item>
        <item name="android:background">@color/sery_main_temni</item>
        <item name="android:gravity">left|top</item>
        <item name="android:padding">12dp</item>

    </style>

    <style name="tv_stroka_na_vsu_shirinu_glavnaya" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/shrift_2</item>
        <item name="android:background">@color/sery_main_svetly</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
